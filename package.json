{
    "name": "solfegejs-application",
    "description": "SolfegeJS application",
    "version": "4.0.0",
    "author": "neolao <contact@neolao.com>",
    "private": false,
    "repository": "https://github.com/solfegejs/application.git",
    "license": "MIT",
    "keywords": [
        "solfege"
    ],
    "files": [
        "lib"
    ],
    "main": "lib/Application.js",
    "engines": {
        "node": ">= 10.8"
    },
    "devDependencies": {
        "eslint": "^5.3.0",
        "eslint-plugin-node": "^7.0.1",
        "jest": "^23.4.2",
        "prettier": "^1.14.0",
        "prettier-eslint": "^8.8.2",
        "prettier-eslint-cli": "^4.7.1",
        "watch": "^1.0.2"
    },
    "scripts": {
        "prepare": "npm run lint",
        "lint": "prettier-eslint --list-different \"lib/**/*.js\"",
        "lint-fix": "prettier-eslint --write \"lib/**/*.js\"",
        "prettier": "prettier-eslint",
        "test": "jest",
        "watch": "watch 'echo \"\\033[41;37m      LINT      \\033[0m\"; npm run --silent lint-fix' ./lib",
        "example-console": "node example/console.js"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 2019
        },
        "extends": [
            "eslint:recommended",
            "plugin:node/recommended"
        ]
    },
    "jest": {
        "moduleFileExtensions": [
            "js"
        ],
        "collectCoverageFrom": [
            "lib/**/*.js"
        ]
    }
}
